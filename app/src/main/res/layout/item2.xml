<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:background="@drawable/gradient_bg">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_image_op"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@android:color/background_light">
            <ImageView
                android:id="@+id/image_view_onlyphotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_foreground" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_image_op"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/text_view_image_title_onlyphotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25sp"
                android:text="The Story Title"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>